<div class="home-header">
    {{#if busca}}
  <h1>Você está buscando por: <span>{{busca}}</span></h1>
    {{#if quantidadePensamentos}}
      <p>Foram encontrados <span>{{quantidadePensamentos}}</span> Pensamentos</p>
    {{else}}
      <p>Nenhum pensamento encontrado</p>
    {{/if}}
  {{else}}
  <h1>Todos os <span>Pensamentos</span></h1>
  {{/if}}
  <form action="/" method="GET">
    <input type="text" name="search" placeholder="Está buscando por algo?">
    <input type="submit" value="Buscar" class="btn">
  </form>
  <div class="order-container">
    <span>Ordenar por:</span>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="new">
      <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>
    <form action="/" method="GET">
      <input type="hidden" name="search" value="{{this.search}}">
      <input type="hidden" name="order" value="old">
      <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>
    <a href="/">Limpar</a>
  </div>
</div>
<div class="pensamentos-container">
  {{#each pensamentos}}
  <figure>
    <blockquote>
      "{{this.title}}"
    </blockquote>
    <figcaption>por <span>{{this.User.nome}}</span></figcaption>
  </figure>
  {{/each}}
</div>